# with plugin ik: https://github.com/medcl/elasticsearch-analysis-ik
FROM k8s.gcr.io/elasticsearch:v6.2.5
COPY ik /usr/share/elasticsearch/plugins/ik
COPY ik/config /usr/share/elasticsearch/config/ik
RUN echo "path.repo: /data-backup" >> /usr/share/elasticsearch/config/elasticsearch.yml
RUN echo "indices.fielddata.cache.size: 40%" >> /usr/share/elasticsearch/config/elasticsearch.yml